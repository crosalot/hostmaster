function oneclick_site_is_success($task_id) {
  //$task_id = db_result(db_query("SELECT nid FROM {hosting_task} WHERE rid = %d", $site_id));
  $node = node_load($task_id);
  $class = hosting_task_status_class($node->task_status);

  //$result = db_result(db_query("SELECT count(*) FROM {hosting_task_log} WHERE vid=%d", $node->vid));

  switch ($class) {
    case 'hosting-queue':
      $per = 35;
      break;
    case 'hosting-processing':
      $per = 75;
      break;
    case 'hosting-success':
      $per = 100;
      break;
    default:
      $per = 0;
  }


  echo drupal_json(array(
    'status' => 1,
    'message' => ucfirst(substr($class, 8)),
    'percentage' => $per, 
  ));
  exit();

}

