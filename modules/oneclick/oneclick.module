/**
 * Implementation of hook_menu() 
 */
function oneclick_init() {
  if ($_GET['q'] != 'user/verify' && 
      $_GET['q'] != 'logout' && 
      arg(0) != 'user' && 
      arg(1) != 'validate' && 
      user_is_logged_in() && 
      !_user_is_verified()) {

    drupal_goto('user/verify');
  }
}
